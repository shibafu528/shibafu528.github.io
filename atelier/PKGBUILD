# Maintainer: shibafu <shibafu528@gmail.com>
pkgname=atelier
pkgver=1.0
pkgrel=1
epoch=
pkgdesc="A window manager for X"
arch=('i686' 'x86_64')
url="http://shibafu528.info"
license=('MIT')
groups=()
depends=('gtk2' 'jansson')
makedepends=('cmake')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://shibafu528.github.io/atelier/$pkgname-$pkgver.tar.xz")
noextract=()
md5sums=("8f2f3473eb75cfcfaac39dc220f72c92")

build() {
	cd "$pkgname-$pkgver"
	cmake -D CMAKE_INSTALL_PREFIX=/usr .
	make
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
